<header class="row">
  <div class="col-sm-10">
    <h3>Job</h3>
  </div>
</header>

<table class="table table-striped table-bordered table-white">
  <thead>
  <tr>
    <th>Worker</th>
    <th>Arguments</th>
    <th>Enqueued At</th>
    <th>Error</th>
  </tr>
  </thead>
  <tr>
    <td><%= @job['class'] %></td>
    <td><%= @job['args'].join(', ') %></td>
    <td>
        <%= relative_time(Time.at(@job['enqueued_at'])) %>
    </td>
    <td><%= @job['error_message'] %></td>
  </tr>
</table>